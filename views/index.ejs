<div class="author">
  <h1 class="author__heading">Welcome to My Blog</h1>
  <p class="author__body">
    This website allows you to share your thoughts, ideas, and experiences by
    creating and publishing blog posts.
  </p>
</div>

<% if (logged) { %>
<div class="dashboard">
  <a class="contact-button" href="/dashboard">
    <span class="button-bg"></span>
    <span class="button-text">Dashboard</span>
  </a>
</div>
<% } %>

<section class="article">
  <h2 class="article__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage !== null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %> <% if (atLastPage && current != 1) { %>
  <a href="/" class="pagination">Go Home (No Older Posts)</a>
  <% } %>
</section>
